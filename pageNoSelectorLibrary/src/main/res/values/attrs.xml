<resources>
    <declare-styleable name="PageNoSelectorKt">
        <!--按钮数量-->
        <attr name="pageButtonNum" format="integer" />
        <!--页总数-->
        <attr name="pageCount" format="integer" />
        <!--按钮背景-->
        <attr name="pageButtonBackgroundSelected" format="reference" />
        <attr name="pageButtonBackgroundUnselected" format="reference" />
        <!--按钮文字颜色-->
        <attr name="pageButtonTextColorSelected" format="color" />
        <attr name="pageButtonTextColorUnselected" format="color" />
        <!--按钮长宽-->
        <attr name="pageButtonWidth" format="dimension" />
        <!--按钮间隔-->
        <attr name="pageButtonMargin" format="dimension" />
        <!--按钮内填充边距-->
        <attr name="pageButtonTextPadding" format="dimension" />
        <!--按钮水平排布-->
        <attr name="pageButtonIsHorizontal" format="boolean" />
    </declare-styleable>

    <!--默认样式-->
    <attr name="defaultPageNoSelectorKtStyle" format="reference" />

</resources>
